version: '3.8'
services:

  wordpress:
    image: 'dfmedia/sample-docker-image:latest'
    ports:
      - '{{ host_app_port }}:80'
    environment:
      WORDPRESS_DB_HOST: db
      WORDPRESS_DB_USER: exampleuser
      WORDPRESS_DB_PASSWORD: examplepass
      WORDPRESS_DB_NAME: exampledb
    volumes:
      # 'artifact_dir' is the path of the Docker Compose artifacts directory
      - '{{ artifact_dir }}/sample-file.txt:/sample-file.txt:ro'
      - '{{ artifact_dir }}/sample-template.txt:/sample-template.txt:ro'

  db:
    image: mysql:5.7
    ports:
      - '{{ host_mysql_port }}:3306'
    environment:
      MYSQL_DATABASE: exampledb
      MYSQL_USER: exampleuser
      MYSQL_PASSWORD: examplepass
      MYSQL_RANDOM_ROOT_PASSWORD: '1'
    # volumes:
    # Notice the use of 'repo_dir' instead of 'artifact_dir' to avoid the copying of large files to the artifact directory.
    #  - '{{ repo_dir }}/really-big-dump-file.sql:/docker-entrypoint-initdb.d/really-big-dump-file.sql:ro'
